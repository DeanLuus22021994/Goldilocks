# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files (Docker Compose, GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Makefile (tabs required)
[Makefile]
indent_style = tab

# Requirements files
[requirements*.txt]
indent_size = 2

# Git files
[.gitignore]
indent_size = 2
