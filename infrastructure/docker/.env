# ==============================================================================
# Goldilocks Docker Compose Environment Configuration
# STRUCTURED - Docker build and infrastructure configuration only
# STANDARDIZATION - Consistent Docker settings across environments
# ==============================================================================

# -----------------------------------------------------------------------------
# Docker Build Configuration
# -----------------------------------------------------------------------------
# Python Version - Use stable version for compatibility with all dependencies
PYTHON_VERSION=3.12-slim
PYTHON_VERSION_BLEEDING_EDGE=3.14.0rc3-trixie
PYTHON_VERSION_STABLE=3.12-slim
PYTHON_VERSION_ALPINE=3.12-alpine

# Container Platform Support
TARGETPLATFORM=linux/amd64
BUILDPLATFORM=linux/amd64
DOCKER_CONTEXT_PATH=../../../..
DOCKER_BUILDKIT=1
BUILDKIT_INLINE_CACHE=1
BUILDX_EXPERIMENTAL=1
COMPOSE_DOCKER_CLI_BUILD=1

# Node.js for frontend tooling (if needed)
NODE_VERSION=22-alpine3.20
NODE_VERSION_LTS=20-alpine

# -----------------------------------------------------------------------------
# Docker Compose Configuration
# -----------------------------------------------------------------------------
# Environment Classification
ENVIRONMENT=development
GOLDILOCKS_PROFILE=dev
APP_VERSION=2.0.0

# Build Targets
BUILD_TARGET=devcontainer

# -----------------------------------------------------------------------------
# Service Port Configuration
# -----------------------------------------------------------------------------
# Application Ports
BACKEND_PORT=9000
ADMINER_PORT=8080
DB_PORT=3306

# -----------------------------------------------------------------------------
# Docker Volume & Data Paths
# -----------------------------------------------------------------------------
# Data Storage Paths
DATA_PATH=./data
CONFIG_PATH=./config
GOLDILOCKS_DATA_PATH=/opt/goldilocks/data
GOLDILOCKS_LOGS_PATH=/opt/goldilocks/logs
GOLDILOCKS_CONFIG_PATH=/opt/goldilocks/config
GOLDILOCKS_CACHE_PATH=/opt/goldilocks/cache
GOLDILOCKS_BACKUP_PATH=/opt/goldilocks/backups
GOLDILOCKS_MONITORING_PATH=/opt/goldilocks/monitoring

# -----------------------------------------------------------------------------
# Database Connection Configuration (for Docker Compose)
# -----------------------------------------------------------------------------
# MariaDB Container Configuration
MARIADB_ROOT_PASSWORD=goldilocks_root_secure_2024
MARIADB_DATABASE=goldilocks
MARIADB_USER=goldilocks_app
MARIADB_PASSWORD=goldilocks_app_secure_2024

# -----------------------------------------------------------------------------
# Container Resource Configuration
# -----------------------------------------------------------------------------
# Resource Limits (used by compose files)
MEMORY_LIMIT=512m
CPU_LIMIT=1.0
MEMORY_RESERVATION=256m
CPU_RESERVATION=0.5

# Health Check Settings (for compose files)
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Adminer Configuration
ADMINER_DESIGN=pappu687
ADMINER_PLUGINS=tables-filter tinymce
