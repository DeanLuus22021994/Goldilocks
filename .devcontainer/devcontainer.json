{
  "name": "Goldilocks Development Environment",
  "build": {
    "context": "..",
    "dockerfile": "../infrastructure/docker/dockerfiles/Dockerfile.multi-stage",
    "target": "devcontainer",
    "args": {
      "BUILDKIT_INLINE_CACHE": "1"
    }
  },
  "workspaceFolder": "/workspaces/Goldilocks",
  "remoteUser": "app",

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb",
    "gpu": "optional"
  },

  "runArgs": ["--gpus=all", "--shm-size=2g"],

  "containerEnv": {
    "FLASK_APP": "src.goldilocks.app",
    "FLASK_ENV": "development",
    "FLASK_DEBUG": "1",
    "PYTHONPATH": "/workspaces/Goldilocks/src",
    "PYTHONUNBUFFERED": "1"
  },

  "mounts": [
    "source=goldilocks-venv,target=/opt/venv,type=volume",
    "source=vscode-server-cache,target=/home/app/.vscode-server,type=volume",
    "source=goldilocks-cache,target=/tmp/goldilocks-cache,type=volume"
  ],

  "initializeCommand": [
    "pwsh",
    "-c",
    "docker volume create goldilocks-venv; docker volume create vscode-server-cache; docker volume create goldilocks-cache"
  ],

  "postCreateCommand": "bash infrastructure/scripts/bash/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "github.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.typeCheckingMode": "strict"
      }
    }
  },

  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": {
      "label": "Flask Development Server",
      "onAutoForward": "notify"
    }
  },
  "shutdownAction": "stopContainer"
}
