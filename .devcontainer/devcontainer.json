{
  "name": "Python 3",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "web",
  "workspaceFolder": "/app",
  "overrideCommand": true,

  // Ensure required host capabilities
  "hostRequirements": {
    "gpu": "optional"
  },

  // Environment inside the container
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PIP_NO_INPUT": "1",
    "PIP_ROOT_USER_ACTION": "ignore",
    "FLASK_APP": "app.py"
  },

  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },

  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": { "label": "Goldilocks Flask App", "onAutoForward": "openBrowser" }
  },

  // Install Python deps and pre-commit hooks (make is installed in the base image)
  "postCreateCommand": "bash -lc 'python -m pip install --upgrade pip && pip3 install -r requirements.txt && pre-commit install -f && pre-commit install-hooks'",

  "remoteUser": "root",
  "init": true
}
