{
  "name": "Python 3",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "web",
  "workspaceFolder": "/app",
  "overrideCommand": true,
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PIP_NO_INPUT": "1",
    "PIP_ROOT_USER_ACTION": "ignore"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },
  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": { "label": "Goldilocks Flask App", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "bash -lc 'python -m pip install --upgrade pip && pip3 install -r requirements.txt'",
  "remoteUser": "root",
  "init": true
}
