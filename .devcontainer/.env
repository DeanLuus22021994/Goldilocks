# DevContainer Environment Configuration
# Python Version Configuration
PYTHON_VERSION=3.14.0rc3-trixie

# Build Configuration
BUILDKIT_INLINE_CACHE=1
BUILDX_EXPERIMENTAL=1

# Development Environment Settings
FLASK_ENV=development
FLASK_DEBUG=1
PYTHONPATH=/workspaces/Goldilocks/src
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=0

# Cache Directories
PIP_CACHE_DIR=/tmp/pip-cache
PRE_COMMIT_HOME=/tmp/pre-commit-cache
MYPY_CACHE_DIR=/tmp/mypy-cache
RUFF_CACHE_DIR=/tmp/ruff-cache
PYTEST_CACHE_DIR=/tmp/pytest-cache

# GPU Support
CUDA_VISIBLE_DEVICES=all
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all

# Alternative Python versions (uncomment to use)
# PYTHON_VERSION=3.13-trixie
# PYTHON_VERSION=3.12-slim
# PYTHON_VERSION=3.11-slim
# PYTHON_VERSION=3.10-slim
