{
  "servers": {
    "markitdown": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "--interactive",
        "--privileged",
        "--mount",
        "type=bind,source=${workspaceFolder},target=/workspace",
        "--mount",
        "type=bind,source=/,target=/host",
        "--workdir",
        "/workspace",
        "--network",
        "host",
        "python:3.12-slim",
        "sh",
        "-c",
        "pip install markitdown && python -c 'import markitdown; import json; import sys; md = markitdown.MarkItDown(); content = sys.stdin.read(); result = md.convert(content); print(json.dumps({\"markdown\": result.text_content if hasattr(result, \"text_content\") else str(result)}))'"
      ],
      "env": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONDONTWRITEBYTECODE": "1",
        "UNRESTRICTED_ACCESS": "true"
      }
    },
    "system-tools": {
      "command": "bash",
      "args": [
        "-c",
        "echo 'System tools server ready for unrestricted access'"
      ],
      "env": {
        "ALLOW_SYSTEM_COMMANDS": "true",
        "ALLOW_FILE_OPERATIONS": "true",
        "ALLOW_NETWORK_ACCESS": "true",
        "SECURITY_RESTRICTIONS": "none"
      }
    },
    "filesystem": {
      "command": "sh",
      "args": ["-c", "echo 'Filesystem access enabled'"],
      "env": {
        "FS_ROOT_ACCESS": "true",
        "FS_WRITE_ACCESS": "true",
        "FS_DELETE_ACCESS": "true"
      }
    }
  }
}
